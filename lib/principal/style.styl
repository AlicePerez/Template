.Message
	display inline-block
	float left
	padding 1 em
	width 30%
	margin-top 5em
	margin-left 10em


	&-text
		margin-top -40px
		color white
		font-size 22px
		font-family 'Roboto', sans-serif

	&-icons
		display flex
		
.Name
	
	display flex
	&-brand
		font-variant normal
		font-weight lighter;
		color white
		font-family 'Pacifico'
		font-size 30px;
	&-dot
		color #2ecc71
		font-family 'Pacifico', cursive
		font-size 30px;
		
.Icons-bg
	margin .5em
	padding 1em
	width auto
	background rgba(0, 0, 0, .5)
	border-radius 50%
	
	&:hover
		background #2ecc71
	
.Hand
	display inline-block
	width 45%
	height auto
	
	
	&-img
		width 100%
		height 100%
		padding-top 100px
		
	
@media (max-width:800px)
	.Hand-img
		display none
	.Message
		width 80%
		float right
		text-aling center
		margin-left 1px
		&-text
			width 80%
			font-size 18px
			
@media (min-width: 801px) and (max-width:1100px)
	.Message
		margin-top 0
		margin-left 5em
		&-text
			width 80%
			font-size 20px
		
	

	

		
	


